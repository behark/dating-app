{
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",

      "npx --no-color-conversion --no-summary --errors-only --rules='*'",
      "tslint --project tsconfig.json"
    ],
    "*.{json,md}": ["prettier --write"]
  }
}
